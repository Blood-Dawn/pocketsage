@startuml seq_add_transaction.puml
actor User
participant "UI" as UI
participant "LedgerService" as Svc
participant "TransactionRepo" as Repo
database "SQLite/SQLModel" as DB
User -> UI: submit form
UI -> Svc: validate(dto)
Svc -> Repo: create(dto)
Repo -> DB: INSERT
DB --> Repo: rowid
Repo --> Svc: Transaction
Svc --> UI: success
UI --> User: toast "Saved"
@enduml
